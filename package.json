{
  "name": "cra-electron",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "author": "Justin Young",
  "description": "Create React App & Electron Example",
  "dependencies": {
    "cra-template": "1.0.3",
    "electron-is-dev": "^1.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-start": "concurrently \"BROWSER=none REACT_APP_DESKTOP=true yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "electron-builder build -m",
    "preelectron-pack": "PUBLIC_URL=./ REACT_APP_DESKTOP=true yarn build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "electron": "^9.4.0",
    "electron-builder": "^22.7.0",
    "wait-on": "^5.1.0"
  },
  "build": {
    "appId": "maori.iama.cra-electron",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ]
  }
}
